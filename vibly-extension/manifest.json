{
  "manifest_version": 3,
  "name": "Vibly",
  "version": "0.1.0",
  "description": "Lightweight screen recording with webcam overlay. Record and share instantly.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.vibly.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  }
}
