{
  "manifest_version": 3,
  "name": "Vibly",
  "version": "0.1.0",
  "description": "Lightweight screen recording with webcam overlay. Record and share instantly.",
  "permissions": [
    "storage",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://api.vibly.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  }
}
